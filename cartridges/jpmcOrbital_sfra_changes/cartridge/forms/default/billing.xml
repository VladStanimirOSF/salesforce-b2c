    <field formid="subscribe" type="boolean" checked="false" default-value="false" mandatory="false" />

    <field formid="encryptedData" type="string"/>

    <!-- fields for JPMC Orbital CreditCard selection -->
    <include formid="jpmcOCreditForm" name="jpmcocreditcard" />
    <!-- fields for JPMC Orbital Profile selection -->
    <include formid="jpmcOProfileForm" name="jpmcoprofilecard" />
    <!-- fields for JPMC Orbital Visa Checkout selection -->
    <include formid="jpmcOVisaPayForm" name="jpmcovisapay" />
    <!-- fields for JPMC Orbital Google Pay selection -->
    <include formid="jpmcOGooglePayForm" name="jpmcgooglepay" />
    <!-- fields for JPMC Orbital Apple Pay selection -->
    <include formid="jpmcOApplePayForm" name="jpmcapplepay" />
    <!-- fields for JPMC Orbital Electronic Check selection -->
    <include formid="jpmcOElectronicCheckForm" name="jpmcoelectroniccheck" />

